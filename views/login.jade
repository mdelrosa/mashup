extends layout

block content

  include login_navbar.jade

  div.container
    div.span11
      div.well
        h1.center Show your squares

    div.span11
      div.well
        div.row
          div.span5
            div.well
              h3.center Please log in!
              form(method='post', action='/login/action')
                p Username
                input(type='text', name='username')
                p Password
                input(type='password', name='password')
                br
                button.btn(type='submit') Log in

          div.span5
            div.well
              h3.center Create an account!
              form(method='post', action='/user/create')
                p Preferred Username
                input.new_username(type='text', name='username')
                p Password
                input(type='password', name='password')
                p Confirm Password
                input(type='password', name='confirm_password')
                br
                button.btn(type='submit') Create
